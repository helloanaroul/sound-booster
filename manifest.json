{
  "manifest_version": 2,
  "name": "Sound Booster",
  "version": "1.0.0",
  "description": "Sound Booster â€” per-site audio amplifier and equalizer. Provides a toggleable volume boost (up to 1000%), plus bass and treble controls using the Web Audio API. Stores per-site settings and works with audio/video elements.",
  "icons": {
    "72": "icons/icon-72x72.png",
    "96": "icons/icon-96x96.png",
    "128": "icons/icon-128x128.png",
    "144": "icons/icon-144x144.png",
    "152": "icons/icon-152x152.png",
    "192": "icons/icon-192x192.png",
    "384": "icons/icon-384x384.png",
    "512": "icons/icon-512x512.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Sound Booster"
  },
  "permissions": ["tabs", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": ["popup.html", "popup.css", "popup.js"],
  "applications": {
    "gecko": {
      "id": "sound-booster@helloanaroul.com",
      "strict_min_version": "55.0"
    }
  }
}
